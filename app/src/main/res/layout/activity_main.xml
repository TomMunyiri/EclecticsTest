<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity"
    android:id="@+id/activityMain">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_person"
        app:riv_border_color="@color/gray_inactive"
        app:riv_border_width="1dp"
        app:riv_corner_radius="50dp"
        android:id="@+id/ivProfPic"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ivProfPic"
        app:layout_constraintTop_toTopOf="@+id/ivProfPic"
        android:text="@string/hello_alex"
        android:textColor="@color/black"
        android:padding="2dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ivProfPic"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:text="@string/last_logged_in_thursday_8_00am"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivProfPic"
        app:layout_constraintBottom_toBottomOf="@+id/ivProfPic"
        android:src="@drawable/ic_notifiction"
        android:layout_marginRight="10dp"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srArticles"
        app:layout_constraintTop_toBottomOf="@+id/ivProfPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/list_item_article"
            android:id="@+id/rvArticles"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>